{
  "name": "nuxt-sample",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "nuxt -c ./configs/nuxt.config.js",
    "build": "nuxt build -c ./configs/nuxt.config.js",
    "start": "nuxt start -c ./configs/nuxt.config.js",
    "generate": "nuxt generate -c ./configs/nuxt.config.js",
    "prettier": "prettier --config ./configs/.prettierrc --ignore-path ./.gitignore",
    "eslint": "eslint --ignore-path .gitignore . -c ./configs/.eslintrc.js",
    "stylelint": "stylelint --ignore-path .gitignore --config ./configs/stylelint.config.js",
    "commitlint": "commitlint -g ./configs/commitlint.config.js",
    "playwright:unit": "playwright test --config ./configs/playwright.unit.config.ts",
    "playwright:e2e": "playwright test --config ./configs/playwright.e2e.config.ts",
    "format": "yarn prettier --write --list-different .",
    "lint:js": "yarn eslint --ext \".js,.ts,.vue\"",
    "lint:style": "yarn stylelint \"**/*.{css,scss,sass,html,vue}\"",
    "lint:prettier": "yarn prettier --check .",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lint:fix": "yarn lint:js --fix && yarn lint:style --fix && yarn format",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "yarn playwright:unit",
    "test:e2e": "yarn playwright:e2e"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "yarn lint:js --fix",
    "*.{css,scss,sass,html,vue}": "yarn lint:style --fix",
    "*": "yarn format"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/composition-api": "^0.33.1",
    "core-js": "^3.25.0",
    "nuxt": "^2.15.8",
    "vue": "^2.7.10",
    "vue-server-renderer": "^2.7.10",
    "vue-template-compiler": "^2.7.10",
    "vuetify": "^2.6.1",
    "webpack": "^5.74.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.16.3",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@nuxt/types": "^2.15.8",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^11.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.1.0",
    "@nuxtjs/vuetify": "^1.12.3",
    "@playwright/test": "^1.25.1",
    "@vue/test-utils": "^1.3.0",
    "babel-core": "7.0.0-bridge.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.4.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^28.0.0"
  }
}
